<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.candy.mapper.MemberMapper">
	<!-- 게시물 조회할때 댓글의 데이터까지 같이 가져오는 기능으로 이해하기 -->
	<resultMap type="org.candy.domain.MemberVO" id="memberMap">
		<id property="mid" column="mid" />
		<result property="mpw" column="mpw" />
		<result property="mname" column="mname" />
		<collection property="authList" resultMap="authMap"></collection>
	</resultMap>

	<resultMap type="org.candy.domain.MemberAuthVO" id="authMap">
		<result property="mid" column="mid" />
		<result property="auth" column="auth" />
	</resultMap>

	<select id="read" resultMap="memberMap">

		select m.mid, mpw, mname, auth 
		from
		tbl_amember_secu m inner join tbl_amember_auth auth
		on m.mid = auth.mid
		where m.mid=#{mid}

	</select>
	
	<insert id="create">
		insert into tbl_amember_secu (mid,mpw,mname,email,phone_number) values (#{mid},#{mpw},#{mname},#{email},#{phone_number})
	</insert>
	
	<insert id="createAuth">
		insert into tbl_amember_auth (mid, auth) values (#{mid}, #{auth})
	</insert>
	
	<update id="updatePassword" >
		update tbl_amember_secu set mpw = #{empw} where mid= #{mid}
	</update>
	
	<select id="idcheck" parameterType="String" resultType="Integer">
		select count(*) from tbl_amember_secu 
		where mid = #{mid}
	</select>

</mapper>